<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"

    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ScrollView
            android:background="#88f986"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"

               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="15sp"
                        android:layout_height="wrap_content">
                        <Button

                            android:id="@+id/one"
                            android:layout_weight="1"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/quiz2"
                            android:layout_gravity="center"
                            />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15sp"
                        android:layout_marginLeft="5dp"
                        >
                        <Button

                            android:layout_weight="1"
                            android:id="@+id/two"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/forum"
                            android:layout_gravity="center"
                            />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="15sp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <Button

                            android:layout_weight="1"
                            android:id="@+id/three"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/test"
                            android:layout_gravity="center"
                            />
                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="15sp"
                        android:layout_height="wrap_content">
                        <Button

                            android:id="@+id/four"
                            android:layout_weight="1"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/timechallenges"
                            android:layout_gravity="center"
                            />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15sp"
                        android:layout_marginLeft="5dp"
                        >
                        <Button

                            android:layout_weight="1"
                            android:id="@+id/five"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/forum"
                            android:layout_gravity="center"
                            />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="15sp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <Button

                            android:layout_weight="1"
                            android:id="@+id/six"
                            android:layout_width="@dimen/buttton_width"
                            android:layout_height="@dimen/buttton_height"
                            android:background="@drawable/test"
                            android:layout_gravity="center"
                            />
                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>